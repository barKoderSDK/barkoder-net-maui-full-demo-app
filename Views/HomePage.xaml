<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BarkoderMaui.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:BarkoderMaui.Models"
    xmlns:local="clr-namespace:BarkoderMaui.Views"
    xmlns:barkoder="clr-namespace:Plugin.Maui.Barkoder.Controls;assembly=Plugin.Maui.Barkoder"
    xmlns:utils="clr-namespace:BarkoderMaui.Utils"
    NavigationPage.HasNavigationBar="False">

    <Grid>
        <Image Source="bg.svg" Aspect="AspectFill" />

        <Grid RowDefinitions="Auto,*,Auto" Padding="0,8,0,0">
            <!-- Top bar -->
            <Grid Padding="20,30,20,10">
                <Image Source="logo_barkoder.svg" HeightRequest="22" HorizontalOptions="Start" />
            </Grid>

            <!-- Content -->
            <CollectionView
                Grid.Row="1"
                ItemsSource="{Binding Sections}"
                Margin="0,0,0,96">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:HomeSection">
                        <VerticalStackLayout Spacing="12" Padding="20,20,20,0">
                            <Label Text="{Binding Title}" FontSize="13" FontAttributes="Bold" TextColor="#000" Padding="0,6,0,0" />
                            <CollectionView
                                ItemsSource="{Binding Items}"
                                ItemsLayout="VerticalGrid, 3"
                                Margin="0,0,0,6"
                                SelectionMode="Single"
                                SelectionChanged="OnHomeItemSelected">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:HomeItem">
                                        <Grid>
                                            <VerticalStackLayout Spacing="6" HorizontalOptions="Center" Margin="0,6,0,6" InputTransparent="True">
                                                <Image Source="{Binding Icon}" HeightRequest="50" WidthRequest="50" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" />
                                                <Label
                                                    Text="{Binding Label}"
                                                    FontSize="11"
                                                    FontAttributes="Bold"
                                                    TextColor="#333"
                                                    HorizontalTextAlignment="Center"
                                                    LineBreakMode="NoWrap"
                                                    InputTransparent="True" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Bottom bar -->
            <Grid Grid.Row="2" BackgroundColor="#fff" Padding="18,12,18,22">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <VerticalStackLayout Grid.Column="0" Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRecentClicked" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="recent.svg" HeightRequest="24" WidthRequest="24" />
                    <Label Text="Recent" FontSize="13" FontAttributes="Bold" TextColor="#444" HorizontalTextAlignment="Center" LineBreakMode="NoWrap" />
                </VerticalStackLayout>

                <Grid Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAnyScanClicked" />
                    </Grid.GestureRecognizers>
                    <VerticalStackLayout Spacing="6" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True">
                        <Frame BackgroundColor="#E52E4C" CornerRadius="18" WidthRequest="54" HeightRequest="54" Padding="0" HasShadow="False" InputTransparent="True">
                            <Image Source="start.svg" HeightRequest="26" WidthRequest="26" HorizontalOptions="Center" VerticalOptions="Center" InputTransparent="True" />
                        </Frame>
                        <Label Text="Anyscan" FontSize="13" FontAttributes="Bold" TextColor="#444" HorizontalTextAlignment="Center" LineBreakMode="NoWrap" InputTransparent="True" />
                    </VerticalStackLayout>
                </Grid>

                <VerticalStackLayout Grid.Column="2" Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnAboutClicked" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Image Source="info.svg" HeightRequest="24" WidthRequest="24" />
                    <Label Text="About" FontSize="13" FontAttributes="Bold" TextColor="#444" HorizontalTextAlignment="Center" LineBreakMode="NoWrap" />
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!-- Gallery scan overlay -->
        <Grid x:Name="GalleryScanOverlay" IsVisible="False" BackgroundColor="#66000000">
            <Grid HorizontalOptions="Center" VerticalOptions="Center">
                <VerticalStackLayout Spacing="12" Padding="20" BackgroundColor="White" WidthRequest="220" HorizontalOptions="Center">
                    <ActivityIndicator IsRunning="True" Color="#E52E4C" />
                    <Label Text="Processing image..." TextColor="#333" FontSize="14" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>
            </Grid>
            <barkoder:BarkoderView
                x:Name="GalleryScanBkdView"
                barkoder:LicenseKey="{x:Static utils:AppConfig.BarkoderLicenseKey}"
                Opacity="0.01"
                InputTransparent="True"
                HeightRequest="10"
                WidthRequest="10" />
        </Grid>
    </Grid>
</ContentPage>

